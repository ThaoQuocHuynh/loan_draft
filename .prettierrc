{
  "semi": true,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react(.*)$",
    "^vite(.*)$",
    "^@vitejs/(.*)$",
    "^rollup(.*)$",
    "^@tailwindcss/(.*)$",
    "^[a-zA-Z0-9]",
    "^@/components/ui",
    "^@/components/(.*)$",
    "^@/lib/(.*)$",
    "^@/contexts/(.*)$",
    "^@/services/(.*)$",
    "^@/utils",
    "^@/pages/(.*)$",
    "^@/types/(.*)$",
    "^./components/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
} 